<!doctype html>
<html>
	<head>
		<title>index</title>
		<link href="style/main.css" rel="stylesheet"/>
	</head>

	<body>

		<% if current_user %>
			<form action='/peep/new' method='post'>
				What's on your mind?<br> <input type='text' name='content'><br>
				<input type='submit' value='peep!'>
			</form><br>

			<% @peeps.each do |peep| %>
			  	<p>
				  	<%= peep.user.name %> on <%= peep.time %><br>
				    Content : <%= peep.content %>
				</p>
			<% end %>

		<% else %>
			<h1>Welcome to Chitter!</h1>
			<form action='/user/new'>
				<input type='submit' value='sign up'>
			</form>

			<form action='/user/signin'>
				<input type='submit' value='sign in'>
			</form>
		<% end %>

	</body>
</html>

